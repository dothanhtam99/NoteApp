<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">


        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MyNotes" parent="Base.Theme.MyNotes" />
    
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/pink</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/note_icon</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MyNotes</item>
    </style>
</resources>